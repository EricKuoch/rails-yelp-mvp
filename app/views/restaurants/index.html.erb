<div class="jumbotron">
  <h1> Welcome to Yelp ! </h1>
</div>
<p>There is the list of the restaurants</p>

<div class="container">
  <div class="row">
    <div class="col">
      <% @restaurants.each do |restaurant|  %>
      <li>
        <%= link_to restaurant.name.upcase, restaurant_path(restaurant) %>
      </li>
      <% end %>
    </div>
  </div>
  <%= link_to "Add a new restaurant", new_restaurant_path , class: "btn btn-primary"%>
</div>



