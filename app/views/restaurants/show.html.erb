<div class="container">
  <div class="jumbotron">
    <h1><%= @restaurant.name.upcase %></h1>
  </div>
  <ul class="list-group-item">
    <h4>Details</h4>
    <li class="list-group-item"> <strong>Address:</strong> <%= @restaurant.address %></li>
    <li class="list-group-item"> <strong>Category:</strong> <%= @restaurant.category.capitalize %></li>
    <li class="list-group-item"> <strong>Phone Number:</strong> <%= @restaurant.phone_number %></li>
  </ul>

  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"> <strong>Review: </strong> <%= review.content %> <br> <strong>Rating :</strong>  <%= review.rating %></li>
    <% end %>

  </ul>
  <div class="btn btn-warning">
  <%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
  </div>
  <%= link_to "Back to the list", restaurants_path %>
</div>
